{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "${workspaceFolder}./make.sh -b",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                //"-lstdc++fs"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }, {
            "label": "Pre-run build",
            "type": "shell",
            "command": "${config:osSpecificCommand}",
            "problemMatcher": [],
            "windows":{
                "command": "${workspaceFolder}/make.ps1 -b"
            },
            "linux":{
                "command": "${workspaceFolder}/make.sh -b"
            }
        },
    ],
    "version": "2.0.0"
}